{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "types": [
      "vitest/globals",
      "node"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "metro.config.js"
  ]
}
