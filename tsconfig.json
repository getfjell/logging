{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "bundler",
    "types": [
      "vitest/globals",
      "node"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "dist"
  ]
}
