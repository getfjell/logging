{
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
        "dist",
        "node_modules"
    ],
    "rules": {
        "no-console": 0,
        "no-unused-vars": "off",
        "max-len": [
            "error",
            {
                "code": 120
            }
        ],
        "max-depth": [
            "error",
            4
        ],
        "max-params": [
            "error",
            4
        ],
        "max-lines": [
            "error",
            500
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1,
                "maxEOF": 1
            }
        ],
        "no-trailing-spaces": [
            "error",
            {
                "skipBlankLines": true
            }
        ],
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "sort-imports": [
            "error",
            {
                "ignoreCase": true,
                "ignoreDeclarationSort": true,
                "ignoreMemberSort": false,
                "memberSyntaxSortOrder": [
                    "none",
                    "all",
                    "multiple",
                    "single"
                ]
            }
        ],
        "no-var": "error",
        "no-undefined": "error",
        "@typescript-eslint/no-unused-vars": "error",
        "@typescript-eslint/ban-ts-comment": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "no-restricted-imports": [
            "error",
            {
              "patterns": [
                "..*",
                "src/*"
              ]
            }
          ]
    }
}
